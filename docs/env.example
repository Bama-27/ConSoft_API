NODE_ENV=development
PORT=3000

# Mongo
MONGO_URI=mongodb://localhost:27017/consoft

# JWT
JWT_SECRET=change_me_in_production

# Frontend origins (coma separada)
FRONTEND_ORIGINS=http://localhost:3000

# Rate limit (opcional)
# Ventana en milisegundos y m√°ximo de solicitudes por IP
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_ENABLED=true
# Omitir paths del limitador (prefijos, separados por coma).
# Incluye chat (cotizaciones y DMs) por defecto
RATE_LIMIT_SKIP_PATHS=/health,/api/quotations,/api/chat

# SMTP (requerido para enviar correos)
MAIL_SMTP_HOST=smtp.gmail.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USER=no.reply.consoft@gmail.com
MAIL_SMTP_PASS=your_app_password_here
MAIL_FROM=no.reply.consoft@gmail.com
ADMIN_NOTIFY_EMAIL=admin@yourdomain.com

# OAuth (opcional)
GOOGLE_CLIENT_ID=


